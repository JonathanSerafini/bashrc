[user]
  email = jonathan@serafini.ca
  name = Jonathan Serafini
	signingkey = 7B6A19DF190C345A

[core]
  editor = vim
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	trustctime = false

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  co = checkout
  ap = add --patch
  st = status
  ci = commit -S -v
  tg = tag -s
  info = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(cyan)(%an)%Creset' --abbrev-commit --date=relative -20

[commit]
	gpgsign = true

[push]
  default = simple

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[pager]
	diff = diff-so-fancy | less --tabs=1,2 -RFX
	show = diff-so-fancy | less --tabs=1,2 -RFX
[gpg]
	program = /usr/local/MacGPG2/bin/gpg2
