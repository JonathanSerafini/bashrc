#!/bin/bash

have_app ()
{
  return $(which $1 &> /dev/null)
}

have_brew_app ()
{
  return $(which $1 | grep -q '/usr/local/bin')
}

have_app "brew" || ruby -e "$(
  curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install
)"

have_brew_app "wget" || brew install wget
have_brew_app "bash" || brew install bash
have_brew_app "gls"  || brew install coreutils
have_brew_app "ec2-cmd" || {
  brew install ec2-ami-tools &&
  brew install ec2-api-tools
}
have_brew_app "tree" || brew install tree

gem install "bundler"
gem install "inifile"
gem install "pry"
