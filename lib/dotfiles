
bashrc.install_dotfiles ()
{
  local f; for f in $(bashrc.items share dotfiles)
  do if [ ! -e "${HOME}/.${f##*/}" ] || [ -L "${HOME}/${f##*/}" ]
     then 
       if [ -L "${f}" ]
       then cp -d "${f}" "${HOME}/.${f##*/}"
       else gln -nsf "${f}" "${HOME}/.${f##*/}"
       fi
     fi
  done
}

bashrc.install_dotfiles;

