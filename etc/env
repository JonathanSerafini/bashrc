
# 
# Ensure the proper terminal type
#
if bashrc.is_ssh
then export TERM=xterm-256color
else export TERM=xterm
fi

#
# Define default applications
#
#export PAGER=less
export PAGER=vimpager
export EDITOR=vim
export VISUAL=vim

#
# Configure bash history
#
export HISTCONTROL=ignoredups # Ignore duplicates not ^\s
export HISTIGNORE="&:exit:clear"
export HISTSIZE=5000
export HISTTIMEFORMAT="%Y-%m-%d.%H:%M:%S :: "

[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# Execute a directory to enter it
#shopt -s autocd

# Check window size after each command and set LINES and COLUMNS
shopt -s checkwinsize

# Merge multi-line commands into single history entry
shopt -s cmdhist
shopt -s histappend

# Do not attempt auto-complete on empty line
shopt -s no_empty_cmd_completion

# Colorize man pages
export LESS_TERMCAP_mb=$'\E[01;35m'
export LESS_TERMCAP_md=$'\E[01;35m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

#
# Define homebrew defaults
#
export HOMEBREW_PREFIX="${HOME}/Local/homebrew"
